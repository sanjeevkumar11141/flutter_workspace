<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="App Name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Total Time in Foreground -->
    <TextView
        android:id="@+id/foregroundTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total time in foreground"
        app:layout_constraintTop_toBottomOf="@id/appNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First Used -->
    <TextView
        android:id="@+id/firstUsedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First Used"
        app:layout_constraintTop_toBottomOf="@id/foregroundTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Last Used -->
    <TextView
        android:id="@+id/lastUsedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last Used"
        app:layout_constraintTop_toBottomOf="@id/firstUsedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Last Time Actively Used -->
    <TextView
        android:id="@+id/lastTimeUsedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last Time Active"
        app:layout_constraintTop_toBottomOf="@id/lastUsedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
